{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES6"],
    "module": "commonjs",
    "rootDir": "./",
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@lib/*": ["./src/lib/*"],
      "@domain/*": ["./src/domain/*"],
      "@config/*": ["./src/config/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@main/*": ["./src/main/*"],
      "@tests/*": ["./tests/*"],
      "@utils/*": ["./src/utils/*"],
      "@presentations/*": ["./src/presentations/*"],
      "@infra/*": ["./src/infra/*"],
      "@presentation/*": ["./src/presentation/*"]
    }
  },
  "include": ["src/**/*", "src/presentations/protocols/controller.ts"],
  "exclude": ["node_modules"]
}
